<!DOCTYPE html>
<html>

<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
</head>

<body>
  <div class="container">
    <div class="valign-wrapper  right-align">
      <a class="waves-effect waves-light btn-large orange darken-3 right" href="/golive">
        <i class="material-icons left">cloud</i>
        Go Live
      </a>
    </div>
    <!-- <a href="/visualize/13" type="button">Visualize</a> -->
    <h2 id="no_live">Sorry! No one is live right now.</h2>
    <!-- <ul class="live_list collection"></ul> -->
    <div class="container">
      <div class="row live_list">
        <a class="col s4 m4" href="/visualize/1234"><img src="https://source.unsplash.com/800x600/?boat" alt=""
            class="responsive-img"></a>
      </div>
    </div>
  </div>
  </div>
</body>
<script type="text/javascript">
  $("#list_room").val('asdf')
  var socket = io().connect();
  socket.emit("list_room");
  socket.on("list_room", function (rooms) {
    if (rooms.length > 0) {
      $('#no_live').hide();
      $('div.live_list').empty();
      rooms.forEach(room => {
        var list = ['beach', 'sand', 'boat', 'cruise']
        var randomNumber = Math.floor(Math.random() * list.length);
        // $("ul.live_list").append(`<li><a href="/visualize/${room}" class="collection-item">${room}</a></li>`);
        $("div.live_list").append(`<a class="col s4 m4" href="/visualize/${room}"><img
            src="https://source.unsplash.com/800x600/?${list[randomNumber]}" alt="" class="responsive-img"></a>`);
      });
    } else {
      $('div.live_list').empty();
      $('#no_live').show();
    }
  });
</script>

</html>